@page "/"
@page "/login"
@layout LoginLayout

@using BlazorApp3.Models
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<div class="login-wrapper">
    <div class="login-box shadow-lg">
        <!-- Left image section -->
        <div class="login-image">
            <div class="image-slider">
                @foreach (var img in images)
                {
                    <div class="slide @(img == images[currentImageIndex] ? "active" : "")"
                        style="background-image: url('@img')">
                    </div>
                }
            </div>
        </div>
        <!-- Right form section -->
        <div class="login-form-area">
            @if (showCreateAccount)
            {
                <h3 class="text-center mb-4">Create Account</h3>

                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert alert-danger">@Message</div>
                }

                <EditForm Model="@createAccountModel" OnValidSubmit="HandleCreateAccount">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="row mb-3">
                        <div class="col">
                            <InputText class="form-control" placeholder="First Name"
                                @bind-Value="createAccountModel.FirstName" />
                        </div>
                        <div class="col">
                            <InputText class="form-control" placeholder="Last Name"
                                @bind-Value="createAccountModel.LastName" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <InputText class="form-control" placeholder="Username" @bind-Value="createAccountModel.Username" />
                    </div>

                    <div class="mb-3">
                        <InputText class="form-control" type="email" placeholder="Email"
                            @bind-Value="createAccountModel.Email" />
                    </div>

                    <div class="mb-3">
                        <InputText class="form-control" type="password" placeholder="Password"
                            @bind-Value="createAccountModel.Password" />
                    </div>

                    <div class="mb-3">
                        <InputText class="form-control" type="password" placeholder="Confirm Password"
                            @bind-Value="createAccountModel.ConfirmPassword" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">Create Account</button>
                    <button type="button" class="btn btn-outline-secondary w-100"
                        @onclick="() => showCreateAccount = false">Back to Login</button>
                </EditForm>
            }
            else
            {
                <h3 class="text-center mb-4">Login</h3>

                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert alert-danger">@Message</div>
                }

                <EditForm Model="@loginCredentials" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <InputText class="form-control" placeholder="Username" @bind-Value="loginCredentials.Username" />
                    </div>

                    <div class="mb-3">
                        <InputText class="form-control" type="password" placeholder="Password"
                            @bind-Value="loginCredentials.Password" />
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <InputCheckbox class="form-check-input" @bind-Value="loginCredentials.RememberMe" />
                            <label class="form-check-label">Remember Me</label>
                        </div>
                        <a href="" class="forgot-password-link">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>

                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-outline-primary w-100 me-2"
                            @onclick="() => showCreateAccount = true">
                            <i class="bi bi-google"></i> Create an Account
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>


@code {

    private LoginModel loginCredentials = new();

    private LogInModels loginModels = new();


    private CreateAccountModel createAccountModel = new();
    private string Message;
    private bool showCreateAccount = false;
    private int currentImageIndex = 0;
    private List<string> images = new()
{
@* "/Images/b.jpg", *@
"/Images/g.jpg",
"/Images/h.jpg"
};
    private async Task ShowMessage(string text, int durationSeconds = 10)
    {
        Message = text;
        StateHasChanged();

        // Wait for the specified duration
        await Task.Delay(durationSeconds * 1000);

        // Hide the message
        Message = null;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        // Rotate images every 5 seconds
        var timer = new System.Timers.Timer(5000);
        timer.Elapsed += (s, e) =>
        {
            currentImageIndex = (currentImageIndex + 1) % images.Count;
            InvokeAsync(StateHasChanged);
        };
        timer.Start();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var savedUsername = await JS.InvokeAsync<string>("localStorage.getItem", "savedUsername");
            var savedPassword = await JS.InvokeAsync<string>("localStorage.getItem", "savedPassword");

            if (!string.IsNullOrEmpty(savedUsername) && !string.IsNullOrEmpty(savedPassword))
            {
                loginCredentials.Username = savedUsername;
                loginCredentials.Password = savedPassword;
                loginCredentials.RememberMe = true;
                await Task.Delay(300);
                await HandleLogin();
            }
        }
    }

    private async Task HandleLogin()
    {
        if ((loginCredentials.Username == loginModels.Email || loginCredentials.Username == loginModels.Username) &&
        loginCredentials.Password == loginModels.Password)
        {
            if (loginCredentials.RememberMe)
            {
                await JS.InvokeVoidAsync("localStorage.setItem", "savedUsername", loginCredentials.Username);
                await JS.InvokeVoidAsync("localStorage.setItem", "savedPassword", loginCredentials.Password);
            }
            else
            {
                await JS.InvokeVoidAsync("localStorage.removeItem", "savedUsername");
                await JS.InvokeVoidAsync("localStorage.removeItem", "savedPassword");
            }

            NavigationManager.NavigateTo("/home", forceLoad: true);
        }
        else
        {
            await ShowMessage("Invalid username or password");
            StateHasChanged();
        }
    }

    private async Task HandleCreateAccount()
    {
        if (createAccountModel.Password != createAccountModel.ConfirmPassword)
        {
            await ShowMessage("Passwords do not match!");
            StateHasChanged();
            return;
        }


        await ShowMessage("Account created successfully! Please login.");
        showCreateAccount = false;


        createAccountModel = new CreateAccountModel();
        StateHasChanged();
    }

    public class LoginModel
    {
        [Required]
        public string Username { get; set; }
        [Required]
        public string Password { get; set; }
        public bool RememberMe { get; set; }
    }

    @* public class CreateAccountModel
